rule download_dna:
    output:
        fa = references + "dna.fa"
    threads:
        1
    params:
        url = config["reference"]["dna"]
    log:
        "logs/download/dna.log"
    benchmark:
        "benchmarks/download/dna.json"
    shell:
        """
        wget                \
            -O  -           \
            -o  {log}       \
            {params.url}    |
        {gzip} -dc          \
        > {output.fa}
        """  



