rule download_gff:
    output:
        gff = references + "annotation.gff"
    params:
        url = config["reference"]["gff"]
    log:
        "logs/download/gff.log"
    benchmark:
        "benchmarks/download/gff.json"
    shell:
        """
        wget \
            -O - \
            -o {log} \
            {params.url} |
        {gzip} -dc \
        > {output.gff}
        """
